<table class="companylist">
  <tbody>
    <% Person.investors.order('name').group_by{|x| x.name[0...1]}.each do |x,y|  %>
      <tr>
        <td colspan="3">
          <h4><%= x %></h4>
        </td>
      </tr>
      <%  y.in_groups_of(2, false) do |persons| %>
        <tr>
          <% for pers in persons %>
            <td><%= link_to pers.person_name, pers %></td>
          <% end %>
        </tr>

      <% end %>
    <%  end %>
  </tbody>
</table>